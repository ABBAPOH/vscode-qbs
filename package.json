{
    "name": "qbs-tools",
    "displayName": "QBS",
    "description": "QBS support in Visual Studio Code",
    "version": "0.0.1",
    "publisher": "community",
    "repository": {
        "type": "git",
        "url": "https://github.com/denis-shienkov/vscode-qbs"
    },
    "bugs": {
        "url": "https://github.com/denis-shienkov/vscode-qbs/issues"
    },
    "homepage": "https://github.com/denis-shienkov/vscode-qbs",
    "keywords": [
        "qbs",
        "tools",
        "build",
        "c++",
        "native"
    ],
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "res/logo.png",
    "activationEvents": [
        "onCommand:qbs.selectProject",
        "onCommand:qbs.configure",
        "onCommand:qbs.build",
        "onCommand:qbs.clean",
        "workspaceContains:*.qbs"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "qbs.selectProject",
                "title": "%qbs-tools.command.qbs.select.project.title%",
                "category": "QBS"
            },
            {
                "command": "qbs.configure",
                "title": "%qbs-tools.command.qbs.configure.title%",
                "category": "QBS"
            },
            {
                "command": "qbs.build",
                "title": "%qbs-tools.command.qbs.build.title%",
                "category": "QBS"
            },
            {
                "command": "qbs.clean",
                "title": "%qbs-tools.command.qbs.clean.title%",
                "category": "QBS"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "QBS configuration",
            "properties": {
                "qbs.qbsPath": {
                    "type": "string",
                    "default": "qbs",
                    "description": "%qbs-tools.configuration.qbs.qbsPath.description%",
                    "scope": "resource"
                },
                "qbs.sourceDirectory": {
                    "type": "string",
                    "default": "${workspaceFolder}",
                    "description": "%qbs-tools.configuration.qbs.sourceDirectory.description%",
                    "scope": "resource"
                },
                "qbs.buildDirectory": {
                    "type": "string",
                    "default": "${workspaceFolder}/build",
                    "description": "%qbs-tools.configuration.qbs.buildDirectory.description%",
                    "scope": "resource"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.49.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^12.11.7",
        "eslint": "^7.9.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0",
        "vscode-nls-dev": "^3.3.2"
    },
    "dependencies": {
        "vscode-nls": "^3.2.5"
    }
}
